{
   "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022", // emit native ES modules
      "moduleResolution": "node", // resolve like Node/ESM
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "declaration": false,
      "sourceMap": false,
      "removeComments": false,
      "noEmitOnError": true,

      "outDir": "./module",
      "lib": [ "ES2022", "DOM" ],
      "allowJs": true,
      "checkJs": true,
      "noEmit": false
   },
   "include": [
      "./src/**/*"
   ]
}