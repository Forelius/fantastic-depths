<section class="tab {{tabs.abilities.cssClass}}" data-group='primary' data-tab='abilities'>
   <header class="sheet-header">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" data-action="editImage" height="80" width="80" />
      <div class="header-fields">
         <div class="summary flexrow">
            <div class="flex2">
               <div class="charname">
                  <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
                  <label>{{localize 'Name'}}</label>
               </div>
            </div>
            <div style="max-width:70px;">
               <input type="text" name="system.details.species" value="{{system.details.species}}" data-dtype="String" data-tooltip="{{system.details.species}}" />
               <label class="open-sheet" data-action="editSpecies">{{localize 'FADE.Actor.Species'}}</label>
            </div>
         
         </div>
         <div class="summary flexrow">
            <div style="max-width: 90px">
               <input type="text" name="system.details.alignment" value="{{system.details.alignment}}" data-dtype="String" data-tooltip="{{system.details.alignment}}" />
               <label>{{localize 'FADE.Actor.Alignment'}}</label>
            </div>
            <div style="max-width: 50px">
               <input name="system.wrestling" type="text" data-dtype="Number" value="{{system.wrestling}}" />
               <label for="system.wrestling" data-tooltip="{{localize 'FADE.Actor.Wrestling.long'}}">{{localize 'FADE.Actor.Wrestling.short'}}</label>
            </div>
         </div>
         <div class="summary flexrow">
            <div class="flex1" style="max-width: 50px">
               <input type="text" name="system.thac0.value" value="{{@root.system.thac0.value}}" data-dtype="Number" />
               <label>{{localize "FADE.Actor.THAC0"}}</label>
            </div>
            <div class="flex1" style="max-width: 50px">
               <input type="text" name="system.thbonus" value="{{@root.system.thbonus}}" data-dtype="Number" readonly data-tooltip="{{localize "FADE.Actor.THBonusHint"}}" />
               <label>{{localize "FADE.Actor.THBonus"}}</label>
            </div>
            <div class="flex1" style="max-width:50px">
               <input type="text" name="system.details.attacks" value="{{system.details.attacks}}" data-dtype="String" data-tooltip="{{localize 'FADE.Actor.Attacks.long'}}" />
               <label data-tooltip="{{localize 'FADE.Actor.Attacks.long'}}">{{localize 'FADE.Actor.Attacks.abbr'}}</label>
            </div>
         </div>
      </div>
   </header>
   {{> "abilityScores"}}
   <div class="flexrow align-vtop">
      <!-- SAVING THROWS -->
      {{> "actorSaves"}}
      <div>
         <!--HIT POINTS & ARMOR CLASS-->
         {{> "actorHpAc"}}
         <!-- MOVEMENT -->
         <div class="bordered text-center" style="height:48%;">
            {{> "actorMovement"}}
         </div>
      </div>
      <div>
         <!-- EXPLORATION -->
         {{> "actorExploration"}}
      </div>
   </div>
   <!-- Equipped Weapons -->
   <div class="flexrow">
      {{> "actorEquippedWeapons"}}
   </div>
</section>