<!-- Content that only the GM should see goes here -->
<section class="bordered">
   <ul class="summary flexrow">
      <li>
         <input type='text' name="system.encumbrance.max" value='{{system.encumbrance.max}}' data-dtype='Number' title="{{localize 'SETTINGS.EncMax.Hint2'}}" />
         <label for="system.encumbrance.max">{{localize 'SETTINGS.EncMax.Name'}}</label>
      </li>
      <li>
         <input type='text' name="system.movement.max" value='{{system.movement.max}}' data-dtype='Number' title="{{localize 'SETTINGS.move.max.hint'}}" />
         <label for="system.movement.max">{{localize 'SETTINGS.move.max.name'}}</label>
      </li>
      <li>
         <input type='text' name="system.flight.max" value='{{system.flight.max}}' data-dtype='Number' title="{{localize 'SETTINGS.move.maxFlight.hint'}}" />
         <label for="system.flight.max">{{localize 'SETTINGS.move.maxFlight.name'}}</label>
      </li>
      <li>
         <input type="checkbox" name="system.config.isSpellcaster" data-dtype="Boolean" {{#if system.config.isSpellcaster}} checked{{/if}} title="{{localize 'SETTINGS.isSpellcaster.hint'}}" />
         <label for="system.config.isSpellcaster">{{localize 'SETTINGS.isSpellcaster.name'}}</label>
      </li>
   </ul>
</section>
<section class="bordered">
   <label for="gm-notes">GM Notes:</label>
   <textarea id="gm-notes" name="system.gm.notes" rows="14">{{system.gm.notes}}</textarea>
</section>
