<section class="grid grid-3col">
   <aside class="bordered">
      <div class="abilities">
         {{#each system.abilities as |ability key|}}
         <div class="ability flexrow flex-group-center">
            <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number" />
            <label for="system.abilities.{{key}}.value" class="rollable align-left" data-roll="d20" data-label="{{localize (concat 'FADE.Actor.Abilities.' key '.long')}}">{{localize (concat 'FADE.Actor.Abilities.' key '.long')}}</label>
            <span class="ability-mod" title="{{localize (concat 'FADE.Actor.Abilities.' key '.mod')}}">{{numberFormat ability.mod decimals=0 sign=true}}</span>
         </div>
         {{/each}}
      </div>
   </aside>
   <section>
      <div class="bordered">
         <!-- Hit Points -->
         <div class="health xsmall-col">
            <label>{{localize 'FADE.Actor.HealthShort'}}</label> / <label>{{localize 'FADE.Actor.Max'}}</label>
            <label class="hitdie">{{localize 'FADE.Actor.HitDiceShort'}}</label>
            <br />
            <input name="system.hp.value" type="text" value="{{system.hp.value}}" data-dtype="Number" title="{{localize 'FADE.Actor.HealthShort'}}" />
            /
            <input name="system.hp.max" type="text" value="{{system.hp.max}}" data-dtype="Number" title="{{localize 'FADE.Actor.HealthMax'}}" />
            <input class="hitdie" name="system.hp.hd" type="text" value="{{system.hp.hd}}" data-dtype="String" title="{{localize 'FADE.Actor.HitDiceShort'}}" />
         </div>
         <!-- Armor Class -->
         <div class="armor-class xsmall-col">
            <label for="system.ac.value" title="{{localize 'FADE.Armor.long'}}">{{localize 'FADE.Armor.abbr'}}</label>
            <br />
            <input name="system.ac.value" type="text" value="{{system.ac.value}}" data-dtype="Number" title="{{localize 'FADE.Armor.long'}}" />
         </div>
      </div>
      <div class="bordered text-center">
         <h4>{{localize 'FADE.Actor.Ex.long'}}</h4>
         <div class="flexrow flex-group-center">
            <span class="xsmall-col">
               <label class="rollable" for="system.exploration.openDoor" data-roll="d6" data-label="{{localize 'FADE.Actor.Ex.OpenDoor.value'}}" title="{{localize 'FADE.Actor.Ex.OpenDoor.long'}}">{{localize 'FADE.Actor.Ex.OpenDoor.abbr'}}</label>
               <br />
               <input name="system.exploration.openDoor" type="text" data-dtype="Number" title="{{localize 'FADE.Actor.Ex.OpenDoor.long'}}" value="{{system.exploration.openDoor}}" />
            </span>
            <span class="xsmall-col">
               <label class="rollable" for="system.exploration.secretDoor" data-roll="d6" data-label="{{localize 'FADE.Actor.Ex.SecretDoor.value'}}" title="{{localize 'FADE.Actor.Ex.SecretDoor.long'}}">{{localize 'FADE.Actor.Ex.SecretDoor.abbr'}}</label>
               <br />
               <input name="system.exploration.secretDoor" type="text" data-dtype="Number" title="{{localize 'FADE.Actor.Ex.SecretDoor.long'}}" value="{{system.exploration.secretDoor}}" />
            </span>
         </div>
         <div class="clear-fix"></div>
         <div class="flexrow flex-group-center">
            <span class="xsmall-col">
               <label class="rollable" for="system.exploration.listenDoor" data-roll="d6" data-label="{{localize 'FADE.Actor.Ex.ListenDoor.value'}}" title="{{localize 'FADE.Actor.Ex.ListenDoor.long'}}">{{localize 'FADE.Actor.Ex.ListenDoor.abbr'}}</label>
               <br />
               <input name="system.exploration.listenDoor" type="text" data-dtype="Number" title="{{localize 'FADE.Actor.Ex.ListenDoor.long'}}" value="{{system.exploration.listenDoor}}" />
            </span>
            <span class="xsmall-col">
               <label class="rollable" for="system.exploration.findTrap" data-roll="d6" data-label="{{localize 'FADE.Actor.Ex.FindTrap.value'}}" title="{{localize 'FADE.Actor.Ex.FindTrap.long'}}">{{localize 'FADE.Actor.Ex.FindTrap.abbr'}}</label>
               <br />
               <input name="system.exploration.findTrap" type="text" data-dtype="Number" title="{{localize 'FADE.Actor.Ex.FindTrap.long'}}" value="{{system.exploration.findTrap}}" />
            </span>
         </div>
         <div class="clear-fix"></div>
      </div>
   </section>
   <section class="bordered text-center">
      <!-- Saving Throws -->
      <div class="saving-throws">
         <h4>{{localize 'FADE.Actor.Saves.long'}}</h4>
         {{#each system.savingThrows as |savingThrow key|}}
         <div class="flexrow flex-group-center ability">
            <input type="text" name="system.savingThrows.{{key}}.value" value="{{savingThrow.value}}" data-dtype="Number" />
            <label for="system.savingThrows.{{key}}.value" class="rollable align-left" data-roll="d20" data-label="{{localize (concat 'FADE.Actor.Saves.' key '.long')}}">
               {{localize (concat 'FADE.Actor.Saves.' key '.long')}}
            </label>
         </div>
         {{/each}}
      </div>
   </section>
</section>
<section class="grid max-width-300px grid-2col">
   <section class="bordered text-center">
      <!-- Movement -->
      <h4>{{localize 'FADE.Actor.Movement.long'}}</h4>
      <div class="grid grid-4col label-12px">
         <div>
            <label for="system.movement.turn">{{localize 'FADE.Actor.Movement.turn'}}</label>
            <input name="system.movement.turn" type="text" data-dtype="Number" value="{{system.movement.turn}}" />
         </div>
         <div>
            <label for="system.movement.round">{{localize 'FADE.Actor.Movement.round'}}</label>
            <input name="system.movement.round" type="text" data-dtype="Number" readonly value="{{system.movement.round}}" />
         </div>
         <div>
            <label for="system.movement.day">{{localize 'FADE.Actor.Movement.day'}}</label>
            <input name="system.movement.day" type="text" data-dtype="Number" readonly value="{{system.movement.day}}" />
         </div>
         <div>
            <label for="system.movement.run">{{localize 'FADE.Actor.Movement.run'}}</label>
            <input name="system.movement.run" type="text" data-dtype="Number" readonly value="{{system.movement.run}}" />
         </div>
      </div>
   </section>
   <section class="bordered text-center">
      <div>
         <h4>Other</h4>
         <div class="grid grid-4col label-12px">
            <div>
               <label for="system.wrestling"  title="{{localize 'FADE.Actor.Wrestling.long'}}">{{localize 'FADE.Actor.Wrestling.short'}}</label>
               <input name="system.wrestling" type="text" data-dtype="Number" value="{{system.wrestling}}" />
            </div>
            <div>
               TBD
            </div>
            <div>
               TBD
            </div>
         </div>
      </div>
   </section>
</section>