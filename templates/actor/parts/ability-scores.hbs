 <!--ABILITY SCORES-->
<div class="bordered flexrow" style="position:relative;">
   <a class="edit-scores" style="position:absolute; top:2px; left: 4px; font-size:11px;">
      <i class="fas fa-pencil"></i>
   </a>
   {{#each system.abilities as |ability key|}}
   <div class="ability ability-horz">
      <div class="flex-group-center">
         <label for="system.abilities.{{key}}.value" style="text-align:center;" class="rollable flex0{{#if @root.abilityAbbr}} abbr{{else}} long{{/if}}"
                data-ability="{{key}}"
                data-test="ability"
                data-pass="lte"
                data-tooltip="{{localize (concat 'FADE.Actor.Abilities.' key '.hint')}}">
            {{#if @root.abilityAbbr}}
            {{localize (concat 'FADE.Actor.Abilities.' key '.abbr')}}
            {{else}}
            {{localize (concat 'FADE.Actor.Abilities.' key '.long')}}
            {{/if}}
         </label>
      </div>
      <div class="flex-group-center">
         <input class="ability-score-input" type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number" {{#unless @root.editScores}}style="display:none"{{/unless}} />
         <span class="ability-score" {{#if @root.editScores}}style="display:none"{{/if}}>{{ability.total}}</span>
         <span class="ability-mod flex0" data-tooltip="{{localize (concat 'FADE.Actor.Abilities.' key '.mod')}}">{{numberFormat ability.mod decimals=0 sign=true}}</span>
      </div>
   </div>
   {{/each}}
</div>