<div class="bordered text-center">
   <!-- Secondary Movement -->
   <h4 data-tooltip="FADE.Actor.movement2.hint">{{localize 'FADE.Actor.movement2.long'}}</h4>
   <div class="grid grid-4col label-12px">
      <div>
         <input name="system.movement2.turn" type="text" data-dtype="Number" value="{{system.movement2.turn}}" data-tooltip="{{localize 'FADE.Actor.Movement.turnHint'}}" />
         <label for="system.movement2.turn" data-tooltip="{{localize 'FADE.Actor.Movement.turnHint'}}">{{localize 'FADE.Actor.Movement.turn'}}</label>
      </div>
      <div>
         <input name="system.movement2.round" type="text" data-dtype="Number" value="{{system.movement2.round}}" data-tooltip="{{localize 'FADE.Actor.Movement.roundHint'}}" />
         <label for="system.movement2.round" data-tooltip="{{localize 'FADE.Actor.Movement.roundHint'}}">{{localize 'FADE.Actor.Movement.round'}}</label>
      </div>
      <div>
         <input name="system.movement2.day" type="text" data-dtype="Number" value="{{system.movement2.day}}" data-tooltip="{{localize 'FADE.Actor.Movement.dayHint'}}" />
         <label for="system.movement2.day" data-tooltip="{{localize 'FADE.Actor.Movement.dayHint'}}">{{localize 'FADE.Actor.Movement.day'}}</label>
      </div>
      <div>
         <input name="system.movement2.run" type="text" data-dtype="Number" value="{{system.movement2.run}}" data-tooltip="{{localize 'FADE.Actor.Movement.runHint'}}" />
         <label for="system.movement2.run" data-tooltip="{{localize 'FADE.Actor.Movement.runHint'}}">{{localize 'FADE.Actor.Movement.run'}}</label>
      </div>
   </div>
</div>