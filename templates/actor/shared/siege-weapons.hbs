<div name="equippedWeaponItems" class="items-list">
   <div class="item flexrow items-header">
      <div class="item-name">{{localize "FADE.siege.plural"}}</div>
      {{! Siege equipment uses its own thac0, not the item's }}
      {{#if (ne system.vehicleType "siege")}}
      {{#if isAAC}}
      <div class="item-60px">{{localize "FADE.Actor.THBonus"}}</div>
      {{else}}
      <div class="item-60px">{{localize "FADE.Actor.THAC0"}}</div>
      {{/if}}
      {{/if}}
      <div class="item-100px">{{localize "FADE.siege.crew.label"}}</div>
      <div class="item-60px">{{localize "FADE.siege.fireRate.label"}}</div>
      <div class="item-100px">{{localize "FADE.Weapon.damage.abbr"}}</div>
      <div class="item-60px">{{localize "FADE.Actor.Attacks.short"}}</div>
   </div>
   {{#each siegeWeapons as |item id|}}
   <div class="item collapsible-content" data-item-id="{{item._id}}" style="border:none;">
      <div class="flexrow">
         <div class="item-name">
            <div class="item-image rollable2"
                 data-action="rollItem"
                 data-test="attack"
                 data-roll-type="item">
               <img src="{{item.img}}" width="26" height="26" />
            </div>
            <a class="item-control" data-action="expandDesc" data-tooltip="{{localize "FADE.dialog.spellcast.noLabel"}}">{{item.knownNameGM}}</a>
         </div>
         {{! Siege equipment uses its own thac0, not the item's }}
         {{#if (ne @root.system.vehicleType "siege")}}
         <div class="item-60px item-prop editable">
            {{#if item.system.siege.fullCrew}}
            {{#if @root.isAAC}}
            <input type="number" name="system.siege.thbonus" data-dtype="Number" value="{{item.system.siege.thbonus}}" data-field="system.siege.thbonus" />
            {{else}}
            <input type="number" name="system.siege.thac0" data-dtype="Number" value="{{item.system.siege.thac0}}" data-field="system.siege.thac0" />
            {{/if}}
            {{else}}
            --
            {{/if}}
         </div>
         {{/if}}
         <div class="item-100px item-prop editable">
            {{#if item.system.siege.fullCrew}}
            <input style="max-width: 40px;" type="number" name="system.siege.crew" data-dtype="Number" value="{{item.system.siege.crew}}" data-field="system.siege.crew" /> /
            {{item.system.siege.fullCrew}}
            {{else}}
            --
            {{/if}}
         </div>
         <div class="item-60px item-prop">{{#if item.system.siege.fireRate}}{{item.system.siege.fireRate}}{{else}}--{{/if}}</div>
         <div class="item-100px item-prop">{{item.system.damageLabel}}</div>
         <div class="item-60px item-prop flexrow editable">
            <input type="text" name="system.attacks.used" data-dtype="String" value="{{item.system.attacks.used}}" data-field="system.attacks.used" />/
            <input type="text" name="system.attacks.max" data-dtype="String" value="{{item.system.attacks.max}}" placeholder="âˆž" data-field="system.attacks.max" />
         </div>
      </div>
      <div class="item-description desc-collapsed bordered"></div>
   </div>
   <div class="flexrow item collapsible-content" data-item-id="{{item._id}}">
      {{#if item.system.ammo.maxLoad}}
      {{#if (lte item.system.ammo.maxLoad 30)}}
      <div class="consumable-counter">
         <label style="margin-right:4px;">{{item.system.ammo.type}}</label>
         {{#times item.system.ammo.load}}
         <div class="full-mark"></div>
         {{/times}} {{#times (subtract item.system.ammo.maxLoad item.system.ammo.load)}}
         <div class="empty-mark"></div>
         {{/times}}
      </div>
      {{/if}}
      {{/if}}
   </div>
   {{/each}}
</div>