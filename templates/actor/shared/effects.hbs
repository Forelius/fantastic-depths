<section class="tab {{tabs.effects.cssClass}}" data-group="primary" data-tab="effects">
   <div class="items-list">
      <div class="flexrow items-header">
         <div class="item-name">{{localize 'FADE.condition.plural'}}</div>
         <div class='item-controls'>
            {{localize 'TYPES.Item.condition'}}
         </div>
      </div>
      {{#each conditions as |item|}}
      <div class='item flexrow' data-item-id='{{item._id}}'>
         <div class='item-name'>
            <div class='item-image chatable' data-roll-type='item'>
               <img src='{{item.img}}' width='26' height='26' />
            </div>
            <a class='item-control item-edit' data-action="editItem" data-tooltip='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.condition")}}'>{{item.name}}</a>
         </div>
         <div class='item-controls item-prop'>
            <a class='item-control item-delete' data-action="deleteItem" data-tooltip='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.condition")}}'>
               <i class='fas fa-trash'></i>
            </a>
         </div>
      </div>
      {{/each}}
   </div>
   {{#if isGM}}
   <div class="items-list effects-list">
      {{#each effects as |section sid|}}
      <div class="flexrow items-header collapsible-header" data-effect-type="{{section.type}}" data-parent-id="{{@root.actor.id}}">
         <div class="item-name">{{localize section.label}}</div>
         <div class="effect-source">{{localize "FADE.Effect.Source"}}</div>
         <div class="effect-source">{{localize "FADE.Spell.duration"}}</div>
         <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="createEffect" data-tooltip="{{localize 'DOCUMENT.Create' type=(localize "FADE.Effect.short")}}">
               <i class="fas fa-plus"></i> {{localize 'FADE.Effect.short'}}
            </a>
         </div>
      </div>
      <div>
         <div class="item-list">
            {{#each section.effects as |effect|}}
            <div class="item effect flexrow collapsible-content" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}">
               <div class='item-name effect-name'>
                  <div class='item-image'>
                     <img src='{{effect.img}}' data-tooltip='{{effect.name}}' width='26' height='26' />
                  </div>
                  <a class="effect-control" data-action="editEffect" data-tooltip='{{localize "DOCUMENT.Update" type=(localize "FADE.Effect.short")}}'>{{effect.name}}</a>
               </div>
               <div class="effect-source">{{effect.sourceNameFix}}</div>
               <div class="effect-duration">{{effect.durationLabel}}</div>
               <div class="item-controls effect-controls flexrow">
                  <a class="effect-control" data-action="toggleEffect" data-tooltip="{{localize 'FADE.Effect.Toggle'}}">
                     <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                  </a>
                  <a class="effect-control" data-action="deleteEffect" data-tooltip="{{localize 'DOCUMENT.Delete' type=(localize "FADE.Effect.short")}}">
                     <i class="fas fa-trash"></i>
                  </a>
               </div>
            </div>
            {{/each}}
         </div>
      </div>
      {{/each}}
   </div>
   {{/if}}
</section>