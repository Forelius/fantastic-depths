<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

   {{!-- Sheet Header --}}
   <header class="sheet-header">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
      <div class="header-fields">
         <ul class="summary flexrow">
            <li>
               <div class="charname">
                  <input name="name" class="charname" type="text" value="{{actor.name}}" placeholder="Name" />
                  <label>{{localize 'FADE.Actor.Name'}}</label>
               </div>
            </li>
         </ul>
         <ul class="summary flexrow">
            <li class="flex3">
               <input type="text" name="system.details.alignment" value="{{system.details.alignment}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.Alignment'}}</label>
            </li>
            <li class="flex1">
               <input type="text" name="system.na.wandering" value="{{system.na.wandering}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.NumberAppearing.abbr'}}</label>
            </li>
            <li class="flex1">
               <input type="text" name="system.na.lair" value="{{system.na.lair}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.NumberAppearing.abbrLair'}}</label>
            </li>
            <li class="flex1">
               <input type="text" name="system.details.morale" value="{{system.details.morale}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.Morale'}}</label>
            </li>
         </ul>
         <ul class="summary flexrow">
            <li>
               <input type="text" name="system.details.xpAward" value="{{system.details.xpAward}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.XPAward'}}</label>
            </li>
            <li>
               <input type="text" name="system.details.abilityCount" value="{{system.details.abilityCount}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.AbilityCount'}}</label>
            </li>
            <li>
               <input type="text" name="system.treasure.wandering" value="{{system.treasure.wandering}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.Treasure.wandering'}}</label>
            </li>
            <li>
               <input type="text" name="system.treasure.lair" value="{{system.treasure.lair}}" data-dtype="String" />
               <label>{{localize 'FADE.Actor.Treasure.lair'}}</label>
            </li>
         </ul>
      </div>
   </header>

   {{!-- Sheet Tab Navigation --}}
   <nav class="sheet-tabs tabs" data-group="primary">
      {{!-- Default tab is specified in fadeActorSheet.mjs --}}
      <a class="item" data-tab="abilities">{{localize 'FADE.Actor.Tabs.Abilities'}}</a>
      <a class="item" data-tab="spells">{{localize 'FADE.Actor.Tabs.Spells'}}</a>
      <a class="item" data-tab="effects">{{localize 'FADE.Actor.Tabs.Effects'}}</a>
      <a class="item" data-tab="description">{{localize 'FADE.Actor.Tabs.Description'}}</a>
      {{#if isGM}}<a class='item' data-tab='gm-only'>GM Only</a>{{/if}}
   </nav>

   {{!-- Sheet Body --}}
   <section class="sheet-body">
      {{!-- Abilities Tab --}}
      <div class="tab abilities" data-group="primary" data-tab="abilities">
         {{> "systems/fantastic-depths/templates/actor/parts/monster-abilities.hbs"}}
      </div>
      {{!-- Owned Spells Tab --}}
      <div class="tab spells" data-group="primary" data-tab="spells">
         {{> "systems/fantastic-depths/templates/actor/parts/actor-spells.hbs"}}
      </div>
      {{!-- Description Tab --}}
      <div class="tab biography" data-group="primary" data-tab="description">
         {{> "systems/fantastic-depths/templates/actor/parts/character-desc.hbs"}}
      </div>
      {{! GM-Only Tab }}
      {{#if isGM}}
      <div class='tab' data-group='primary' data-tab='gm-only'>
         <!-- Content that only the GM should see goes here -->
         <label for="gm-notes">GM Notes:</label>
         <textarea id="gm-notes" name="system.gm.notes" rows="18">{{system.gm.notes}}</textarea>
         <!-- You can add more GM-specific content here -->
      </div>
      {{/if}}
   </section>
</form>
