<!-- Conditions with duration -->
<section class="tab {{tabs.effects.cssClass}}" data-group="primary" data-tab="effects">
   <div name="item-conditions" class="items-list">
      <!-- Header Row -->
      <div class="item flexrow items-header" data-action="toggleHeader">
         <div>{{localize "TYPES.Item.condition"}}</div>
         <div style="max-width:150px;">{{localize "FADE.Spell.durationFormula"}}</div>
         <div class="item-controls" style="max-width:30px;"></div>
      </div>
      <!-- Class Ability Entries -->
      {{#each system.conditions as |item index|}}
      <div class="item flexrow" data-item-id="{{item._id}}" style="margin-top:2px;">
         <div>
            <input type="text" style="text-align:left;" name="system.conditions.{{index}}.name" value="{{item.name}}" data-dtype="String" />
         </div>
         <div style="max-width:150px;">
            <input type="text" name="system.conditions.{{index}}.durationFormula" value="{{item.durationFormula}}" data-dtype="String" data-tooltip="{{localize "FADE.Spell.durationFormulaHint"}}" placeholder="{{#if (eq item.durationFormula null)}}∞{{/if}}" />
         </div>
         <div class="item-controls" style="max-width:30px;">
            <a class="item-control" data-action="deleteCondition" data-tooltip="{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.condition")}}" data-type="condition" data-index="{{index}}">
               <i class="fas fa-trash"></i>
            </a>
         </div>
      </div>
      {{/each}}
   </div>
   {{#if effects}}
   <div class="tab {{tabs.effects.cssClass}}" data-group="primary" data-tab="effects">
      {{> "itemEffects"}}
   </div>
   {{/if}}
</section>