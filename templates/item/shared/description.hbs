<section class='tab {{tabs.description.cssClass}}' data-group='primary' data-tab='description'>
   {{#if (or isGM system.isIdentified)}}
   {{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
   <prose-mirror name="system.description" data-document-u-u-i-d="{{item.uuid}}" value="{{system.description}}" collaborate="false" toggled="true">
      {{{enrichedDesc}}}
   </prose-mirror>
   {{else}}
   {{editor enrichedDesc target='system.description' engine="prosemirror" editable=true button=true collaborate=false}}{{editor enrichedUIDesc target='system.unidentifiedDesc' engine="prosemirror" editable=true button=true collaborate=false}}
   {{/if}}
</section>