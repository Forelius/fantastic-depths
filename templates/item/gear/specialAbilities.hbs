<section class="tab {{tabs.specialAbilities.cssClass}}" data-group="primary" data-tab="specialAbilities">
   <div class="flexrow">
      <div style="padding:0 2px;">
         <ol name="class-abilities" class="items-list">
            <!-- Header Row -->
            <li class="item flexrow items-header">
               <div>{{localize "FADE.name"}}</div>
               <div style="max-width:50px">{{localize "FADE.target"}}</div>
               <div>{{localize "FADE.changes"}}</div>
               <div class="item-controls" style="max-width:30px;"></div>
            </li>
            <!-- Special Ability Entries -->
            {{#each system.specialAbilities as |item index|}}
            <li class="item flexrow" data-item-id="{{item.uuid}}">
               <div>
                  <input type="text" style="text-align:left;" name="system.specialAbilities.{{index}}.name" value="{{item.name}}" data-dtype="String" />
               </div>
               <div style="max-width:50px">
                  <input type="number" name="system.specialAbilities.{{index}}.target" value="{{item.target}}" data-dtype="Number" />
               </div>
               <div>
                  <input type="text" style="text-align:left;" name="system.specialAbilities.{{index}}.changes" value="{{item.changes}}" data-dtype="String" />
               </div>
               <div class="item-controls" style="max-width:30px;">
                  <a class="item-control" data-action="deleteSpecialAbility" data-tooltip="{{localize "DOCUMENT.Delete" type=(localize "FADE.SpecialAbility.long")}}" data-type="specialAbility" data-index="{{index}}">
                     <i class="fas fa-trash"></i>
                  </a>
               </div>
            </li>
            {{/each}}
         </ol>
      </div>
   </div>
</section>