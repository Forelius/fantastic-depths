<div>
   <header class="sheet-header">
      <div class="header-fields">
         <div class="summary flexrow">
            <div class="flex3">
               <div class="charname">
                  <input name="name" type="text" value="{{item.name}}" disabled placeholder="Name" />
               </div>
               <label for="name">{{localize "Name"}}</label>
            </div>
            <div class="flex1" style="max-width: 80px;">
               <input name="system.level" type="number" value="{{system.level}}" placeholder="Level" />
               <label for="system.level">{{localize "FADE.Actor.Level"}}</label>
            </div>
            <div class="flex1" style="max-width: 50px;">
               <input type="checkbox" name="system.isPrimary" data-dtype="Boolean" {{#if system.isPrimary}} checked{{/if}} />
               <label data-tooltip="{{localize "FADE.class.primary.hint"}}">{{localize "FADE.class.primary.name"}}</label>
            </div>
         </div>
      </div>
   </header>
   <div>
      <div class="summary flexrow">
         <div class="flex2" style="max-width: 160px">
            <input type="text" name="system.xp.value" value="{{system.xp.value}}" data-dtype="Number" />
            <label>{{localize "FADE.Actor.Experience"}}</label>
         </div>
         <div class="flex2" style="max-width: 160px">
            <input type="text" name="system.xp.next" value="{{system.xp.next}}" data-dtype="Number" />
            <label>{{localize "FADE.Actor.NextLevel"}}</label>
         </div>
         <div class="flex1" style="min-width: 60px">
            <input type="text" name="system.xp.bonus" value="{{@root.system.xp.bonus}}" data-dtype="Number" />
            <label>{{localize "FADE.Actor.XPBonus"}}</label>
         </div>
         <div class="flex1">
            <input type="text" name="system.key" value="{{system.key}}" data-dtype="String" />
            <label for="system.key" data-tooltip="{{localize "FADE.class.key.hint"}}">{{localize "FADE.class.key.name"}}</label>
         </div>
         <div class="flex1">
            <input type="text" name="system.castAsKey" value="{{system.castAsKey}}" data-dtype="String" />
            <label for="system.castAsKey" data-tooltip="{{localize "FADE.class.castAsKey.hint"}}">{{localize "FADE.class.castAsKey.name"}}</label>
         </div>
         {{#if (eq masterySetting "classic")}}
         <div class="flex1" style="max-width:50px">
            <input type="text" name="system.unskilledToHitMod" value="{{system.unskilledToHitMod}}" data-dtype="Number" />
            <label for="system.unskilledToHitMod" data-tooltip="{{localize "FADE.class.unskilledToHitMod.hint"}}">{{localize "FADE.class.unskilledToHitMod.name"}}</label>
         </div>
         {{/if}}
         {{#if (eq masterySetting "heroic")}}
         <div class="flex1">
            <input type="checkbox" name="system.basicProficiency" data-dtype="Boolean" {{#if system.basicProficiency}} checked{{/if}} data-tooltip="{{localize "FADE.Mastery.required.hint"}}" />
            <label for="system.basicProficiency" data-tooltip="{{localize "FADE.Mastery.required.hint"}}">{{localize "FADE.Mastery.required.name"}}</label>
         </div>
         {{/if}}
      </div>
      <div class="summary flexrow">
         <div class="flex1">
            <input type="text" name="system.firstLevel" value="{{system.firstLevel}}" data-dtype="Number" />
            <label for="system.firstLevel" data-tooltip="{{localize "FADE.Actor.firstLevel.hint"}}">{{localize "FADE.Actor.firstLevel.name"}}</label>
         </div>
         <div class="flex1">
            <input type="text" name="system.maxLevel" value="{{system.maxLevel}}" data-dtype="Number" />
            <label for="system.maxLevel" data-tooltip="{{localize "FADE.Actor.maxLevel.hint"}}">{{localize "FADE.Actor.maxLevel.name"}}</label>
         </div>
         <div class="flex1">
            <input type="text" name="system.firstSpellLevel" value="{{system.firstSpellLevel}}" data-dtype="Number" />
            <label for="system.firstSpellLevel" data-tooltip="{{localize "FADE.Actor.firstSpellLevel.hint"}}">{{localize "FADE.Actor.firstSpellLevel.name"}}</label>
         </div>
         <div class="flex1">
            <input type="text" name="system.maxSpellLevel" value="{{system.maxSpellLevel}}" data-dtype="Number" />
            <label for="system.maxSpellLevel" data-tooltip="{{localize "FADE.Actor.maxSpellLevel.hint"}}">{{localize "FADE.Actor.maxSpellLevel.name"}}</label>
         </div>
      </div>
      <div class="summary flexrow">
         <div class="flex2">
            <input type="text" name="system.title" value="{{system.title}}" data-dtype="String" data-tooltip="{{system.title}}" />
            <label>{{localize "FADE.Actor.Title"}}</label>
         </div>
         <div class="flex1" style="max-width: 80px">
            <input class="hitdie" name="system.hd" type="text" value="{{system.hd}}" data-dtype="String" data-tooltip="{{localize "FADE.Actor.HitDice"}}" />
            <label class="hitdie rollable2" data-action="rollGeneric" data-formula="{{system.hd}}" data-label="{{localize "FADE.Actor.HitDice"}}">{{localize "FADE.Actor.HitDiceShort"}}</label>
         </div>
         <div class="flex1">
            <input type="checkbox" name="system.hdcon" data-dtype="Boolean" {{#if system.hdcon}} checked{{/if}} />
            <label data-tooltip="{{localize "FADE.Actor.hdConBonus.hint"}}">{{localize "FADE.Actor.hdConBonus.name"}}</label>
         </div>
         <div class="flex1">
            <input type="text" name="system.attackRank" value="{{system.attackRank}}" data-dtype="String" />
            <label>{{localize "FADE.Actor.attackRank"}}</label>
         </div>
         {{#if isAAC}}
         <div class="flex1" style="max-width: 50px">
            <input type="text" name="system.thbonus" value="{{system.thbonus}}" data-dtype="Number" readonly data-tooltip="{{localize "FADE.Actor.THBonusHint"}}" />
            <label>{{localize "FADE.Actor.THBonus"}}</label>
         </div>
         {{else}}
         <div class="flex1" style="max-width: 50px">
            <input type="text" name="system.thac0" value="{{system.thac0}}" data-dtype="Number" />
            <label>{{localize "FADE.Actor.THAC0"}}</label>
         </div>
         {{/if}}
      </div>
   </div>
</div>