<ol class='items-list'>
   <li class='item flexrow items-header collapsible-header'>
      <div class='item-name'>{{localize 'FADE.Weapon.plural'}}</div>
      <div class="item-60px">{{localize 'FADE.Weapon.mod.toHit.short'}}</div>
      <div class="item-60px">{{localize 'FADE.Weapon.damage.abbr'}}</div>
      <div class="item-60px">{{localize 'FADE.Weapon.mod.dmg.short'}}</div>
      <div class="item-60px">{{localize 'FADE.Item.weight.short'}}</div>
      <div class='item-controls'>
         <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.weapon")}}' data-type='weapon'>
            <i class='fas fa-plus'></i>
            {{localize 'TYPES.Item.weapon'}}
         </a>
      </div>
   </li>
   {{#each weapons as |weapon id|}}
<li class='item flexrow collapsible-content' data-item-id='{{weapon._id}}'>
   <div class='item-name'>
      <div class='item-image'>
         <a data-roll-type='item'>
            <img src='{{weapon.img}}' title='{{weapon.name}}' width='24' height='24' />
         </a>
      </div>
      <a class="item-control item-edit" title='{{localize "DOCUMENT.Update" type='Weapon'}}'>{{weapon.name}}</a>
   </div>
   <div class="item-60px item-prop"><label>{{weapon.system.mod.toHit}}</label></div>
   <div class="item-60px item-prop"><label>{{weapon.system.damageRoll}}</label></div>
   <div class="item-60px item-prop"><label>{{weapon.system.mod.dmg}}</label></div>   
   <div class="item-60px item-prop"><label>{{weapon.system.weight}}</label></div>
   <div class='item-controls'>
      <a class="item-control item-toggle {{#unless weapon.system.equipped}}item-unequipped{{/unless}}"
         title="{{#if weapon.system.equipped}}{{localize 'FADE.Item.Unequip'}}{{else}}{{localize 'FADE.Item.Equip'}}{{/if}}">
         <i class="fas fa-hand"></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Weapon'}}'>
         <i class='fas fa-trash'></i>
      </a>
   </div>
</li>
   {{/each}}
</ol>