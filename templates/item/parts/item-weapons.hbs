<ol class='items-list'>
   <li class='item flexrow items-header collapsible-header'>
      <div class='item-name'>{{localize 'FADE.Weapon.plural'}}</div>
      <div class="item-40px">{{localize 'FADE.Weapon.ammo.short'}}</div>
      <div class="item-40px">{{localize 'FADE.Weapon.mod.toHit.short'}}</div>
      <div class="item-60px">{{localize 'FADE.Weapon.damage.abbr'}}</div>
      <div class="item-40px">{{localize 'FADE.Weapon.mod.dmg.short'}}</div>
      <div class="item-40px" title="{{localize 'FADE.Item.weight.desc'}}">{{localize 'FADE.Item.weight.short2'}}</div>
      <div class='item-controls'>
         <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.weapon")}}' data-type='weapon'>
            <i class='fas fa-plus'></i>
            {{localize 'TYPES.Item.weapon'}}
         </a>
      </div>
   </li>
   {{#each weapons as |weapon id|}}
   <li class='item collapsible-content' data-item-id='{{weapon._id}}'>
      <div class="flexrow">
         <div class='item-name'>
            <div class='item-image rollable' data-roll-type='item'>
               <img src='{{weapon.img}}' title='{{weapon.name}}' width='26' height='26' />
            </div>
            <a class="item-control item-edit" title='{{localize "DOCUMENT.Update" type='Weapon'}}'>{{weapon.name}}</a>
         </div>
         <div class="item-40px item-prop"><label>{{weapon.system.ammo.load}}</label></div>
         <div class="item-40px item-prop"><label>{{weapon.system.mod.toHitText}}</label></div>
         <div class="item-60px item-prop"><label>{{weapon.system.damageRoll}}</label></div>
         <div class="item-40px item-prop"><label>{{weapon.system.mod.dmgText}}</label></div>
         <div class="item-40px item-prop" title="{{localize 'FADE.Item.weight.desc'}}"><label>{{weapon.system.weight}}</label></div>
         <div class='item-controls'>
            <a class="item-control item-toggle {{#unless weapon.system.equipped}}item-unequipped{{/unless}}"
               title="{{#if weapon.system.equipped}}{{localize 'FADE.Item.unequip'}}{{else}}{{localize 'FADE.Item.equip'}}{{/if}}">
               <i class="fas fa-hand"></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Weapon'}}'>
               <i class='fas fa-trash'></i>
            </a>
         </div>
      </div>
      {{#if weapon.system.ammo.maxLoad}} {{#if (lte weapon.system.ammo.maxLoad 30)}}
      <div class="consumable-counter">
         <label style="margin-right:4px;">{{weapon.system.ammo.type}}</label>
         {{#times weapon.system.ammo.load}}
         <div class="full-mark"></div>
         {{/times}} {{#times (subtract weapon.system.ammo.maxLoad weapon.system.ammo.load)}}
         <div class="empty-mark"></div>
         {{/times}}
      </div>
      {{/if}} {{/if}}
   </li>
   {{/each}}
</ol>