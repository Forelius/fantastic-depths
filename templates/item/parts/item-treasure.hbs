<ol class='items-list'>
   <li class='item flexrow items-header collapsible-header'>
      <div class='item-name'>{{localize 'TYPES.Item.treasure'}} ({{treasureValue}} gp)</div>
      <div class="item-60px">{{localize 'FADE.Item.cost.abbr'}}</div>
      <div class="item-40px">{{localize 'FADE.Item.quantity.abbr2'}}</div>
      <div class="item-40px" title="{{localize 'FADE.Item.weight.desc'}}">{{localize 'FADE.Item.weight.short2'}}</div>
      <div class='item-controls'>
         <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.treasure")}}' data-type='item' data-tags="treasure">
            <i class='fas fa-plus'></i>
         </a>
      </div>
   </li>
   {{#each treasure as |item id|}}
   <li class='item collapsible-content' data-item-id='{{item._id}}'>
      <div class="flexrow">
         <div class='item-name'>
            <div class='item-image'>
               <a data-roll-type='item'>
                  <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
               </a>
            </div>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Item'}}'>{{item.name}}</a>
         </div>
         <div class="item-60px item-prop" title="{{localize 'FADE.Item.cost.long'}}"><label>{{item.system.totalCost}}</label></div>
         <div class="item-40px item-prop"><label>{{item.system.quantity}}</label></div>
         <div class="item-40px item-prop" title="{{localize 'FADE.Item.weight.desc'}}"><label>{{item.system.totalWeight}}</label></div>
         <div class='item-controls'>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Item'}}'>
               <i class='fas fa-trash'></i>
            </a>
         </div>
      </div>
      {{/each}}
   </li>
   <!--<li class="item flexrow items-footer">
      <div><strong>Treasure total:</strong> {{treasureValue}} gp</div>
   </li>-->
</ol>