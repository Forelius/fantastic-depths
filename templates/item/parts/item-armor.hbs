<ol class='items-list'>
   <li class='item flexrow items-header collapsible-header'>
      <div class='item-name'>{{localize 'FADE.Armor.plural'}}</div>
      <div class="item-60px">{{localize 'FADE.Armor.abbr'}}</div>
      <div class="item-60px">{{localize 'FADE.Item.weight.short'}}</div>
      <div class='item-controls'>
         <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='Armor'}}' data-type='armor'>
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='armor'}}
         </a>
      </div>
   </li>
   {{#each armor as |armor id|}}
<li class='item flexrow collapsible-content' data-item-id='{{armor._id}}'>
   <div class='item-name'>
      <div class='item-image'>
         <a data-roll-type='item'>
            <img src='{{armor.img}}' title='{{armor.name}}' width='24' height='24' />
         </a>
      </div>
      <label>{{armor.name}}</label>
   </div>
   <div class="item-60px item-prop"><label>{{armor.system.ac}}</label></div>
   <div class="item-60px item-prop"><label>{{armor.system.weight}}</label></div>
   <div class='item-controls item-prop'>
      <a class="item-control item-toggle {{#unless armor.system.equipped}}item-unequipped{{/unless}}"
         title="{{#if armor.system.equipped}}{{localize 'FADE.Item.Unequip'}}{{else}}{{localize 'FADE.Item.Equip'}}{{/if}}">
         <i class="fas fa-tshirt"></i>
      </a>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Armor'}}'>
         <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Armor'}}'>
         <i class='fas fa-trash'></i>
      </a>
   </div>
</li>
   {{/each}}
</ol>