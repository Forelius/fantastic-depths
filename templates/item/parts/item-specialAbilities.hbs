<ol name="specialAbilityItems" class='items-list'>
   <li class='item flexrow items-header collapsible-header'>
      <div class='item-name'>{{localize 'FADE.SpecialAbility.plural'}}</div>
      <div class='item-controls-sm'>
         {{#if @root.isGM}}
         <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=(localize "FADE.SpecialAbility.long")}}' data-type='specialAbility'>
            <i class='fas fa-plus'></i>
            {{localize 'FADE.SpecialAbility.short'}}
         </a>
         {{/if}}
      </div>
   </li>
   {{#each specialAbilities as |item id|}}
   <li class='item collapsible-content bottom-border' data-item-id='{{item._id}}'>
      <div class="flexrow">
         <div class='item-name'>
            <div class="item-image rollable"
                 {{#if item.roll}}
                 data-test="specialAbility"
                 {{/if}}
                 data-roll-type='item'
                 data-label="{{item.name}} {{localize 'FADE.SpecialAbility.short'}}">
               <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
            </div>
            <a class="item-control description-expand" title='{{localize "DOCUMENT.Update" type=(localize "FADE.SpecialAbility.long")}}'>{{item.name}}</a>
         </div>
         <div class='item-controls-sm center-vert'>
            <a class="item-control item-edit" title='{{localize "DOCUMENT.Update" type=(localize "FADE.SpecialAbility.long")}}'>
               <i class='fas fa-pencil'></i>
            </a>
            {{#if @root.isGM}}
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "FADE.SpecialAbility.long")}}'>
               <i class='fas fa-trash'></i>
            </a>
            {{/if}}
         </div>
      </div>
      <div class='item-description desc-collapsed'></div>
   </li>
   {{/each}}
</ol>