{{#if actorName}}
<div class="text-size16">{{actorName}}</div>
{{/if}}
{{#if mdata.label}}
<div>{{mdata.label}}{{#if mdata.target}} ({{mdata.target}}){{/if}}</div>
{{/if}}
{{#if item}}
<div class="bordered" style="padding-bottom:2px;">
   <div class="flexrow collapser">
      <img class="item-image" src='{{item.img}}' />
      <div class="item-name">
         {{#if (ne item.system.isIdentified false)}}
         {{item.name}}
         {{else}}
         {{item.system.unidentifiedName}}
         {{/if}}
      </div>
   </div>
   <div class="collapsible-content collapsed">
      {{#if (ne item.system.isIdentified false)}}
      {{{item.system.description}}}
      {{else}}
      {{{item.system.unidentifiedDesc}}}
      {{/if}}
   </div>
</div>
{{/if}}
{{#if mdata.desc}}
<i style="font-size:12px;">{{mdata.desc}}</i>
{{/if}}
{{#if resultString}}
{{{resultString}}}
{{/if}}
{{{rollContent}}}
{{#if item}}
{{#if (eq item.system.isIdentified true)}}
{{> "rollSaveBtn"}}
{{/if}}
{{/if}}
