<div>
   <div class="attack-desc">{{description}}</div>
   {{#if toHitResult.message}}
   <div class="attack-result">{{{toHitResult.message}}}</div>
   {{/if}}
</div>
<div class="bordered" style="padding-bottom:2px;">
   <div class="flexrow collapser">
      <img class="item-image" src='{{caller.img}}' title='{{caller.name}}' />
      <div class="item-name">{{caller.name}}</div>
      <!--<div class="expander"></div>-->
   </div>
   <div class="collapsible-content collapsed">
      {{{caller.system.description}}}
   </div>
</div>

{{#if damageRoll.formula}}
<div style="margin-top:8px;">
   <button class="damage-roll"
           data-damagetype="{{damageRoll.damageType}}"
           data-attacktype="spell"
           data-label="Damage"
           data-type="damage"
           data-attackerid="{{context.id}}"
           data-weaponid="{{caller.id}}">
      <i class="fa-solid fa-burst"></i>
      <span style="margin-left:4px;">{{localize 'FADE.Chat.damageRoll'}} {{damageRoll.formula}}</span> <span class="small-text">{{damageRoll.type}}</span>
   </button>
</div>
{{/if}}
<div class="card-tray">
   <label class="collapser">
      <i class="fas fa-bullseye" inert></i>
      <span>Targets</span>
   </label>
   <div class="collapsible-content">
      {{#each targets as |target|}}
      <div class="flexrow">
         <div class="flex3" style="margin-left:5px;">{{target.name}}</div>
      </div>
      {{/each}}
   </div>
</div>