{{#if mdata.label}}
<div>{{actorName}}: {{attackName}}</div>
{{/if}}
{{#if mdata.desc}}
<div class="bordered">
   <i style="font-size:12px;">{{mdata.desc}}</i>
</div>
{{/if}}
<div name="digest">
   {{#each digest as |ditem|}}
   <div>{{ditem}}</div>
   {{/each}}
</div>
{{{rollContent}}}
{{#if showApplyDamage}}
<button class="apply-damage" type="button" title="Apply damage to target."
        data-attacktype="{{mdata.attacktype}}"
        data-amount="{{damage}}"
        data-messageid="{{messageId}}"
        data-label="{{mdata.label}}"
        data-desc="{{mdata-desc}}">
   <i class="fas fa-tint"></i> <!-- Blood drop icon -->
</button>
{{/if}}
