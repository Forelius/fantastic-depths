<div>
   <div class="attack-desc">{{description}}</div>
   {{#if toHitResult.message}}
   <div class="attack-result">{{{toHitResult.message}}}</div>
   {{/if}}
</div>
{{{rollContent}}}
<div name="digest" class="digest">
   {{#each digest as |ditem|}}
   <div>{{ditem}}</div>
   {{/each}}
</div>
<div style="margin-top:8px;">
   <button class="damage-roll"
           data-attacktype="{{resp.attackType}}"
           data-damagetype="{{damageRoll.type}}"
           data-attackmode="{{resp.attackMode}}"
           data-label="Damage"
           data-type="damage"
           data-attackerid="{{descData.attackerid}}"
           data-weaponid="{{weapon.id}}">
      <i class="fa-solid fa-burst"></i>      
      <span style="margin-left:4px;">{{localize 'FADE.Chat.damageRoll'}} {{damageRoll.formula}}</span> <span class="small-text">{{damageRoll.type}}</span>
   </button>
</div>
{{#if 0}}
<div id="targetsTray" class="card-tray" style="visibility: collapse; ">
   <label class="collapser">
      <i class="fas fa-bullseye" inert></i>
      <span>Targets</span>
   </label>
   <div class="collapsible-content">
      {{#each toHitResult.targetResults as |targetResult|}}
      <div class="flexrow">
         {{#if targetResult.success}}
         <i class="fas fa-check flex0" style="color:green;"></i>
         {{else}}
         <i class="fas fa-times flex0" style="color:red;"></i>
         {{/if}}
         <div class="flex3" style="margin-left:5px;">{{targetResult.targetname}}</div>
         <div class="ac flex1">
            <i class="fas fa-shield-halved"></i>
            <span>{{targetac}}</span>
         </div>
      </div>
      {{/each}}
   </div>
</div>
{{/if}}