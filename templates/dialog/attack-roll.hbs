<div class="fade-dialog">
   <div class="flexrow top-label">
      <div class="flex2">
         <!-- Dropdown for selecting 'melee' or 'missile' -->
         <label for="attackType">{{localize 'FADE.AttackTypes.name'}}</label>
         <select name="attackType" class="form-control" style="width:100%">
            {{selectOptions types selected='melee'}}
         </select>
      </div>
      {{#if targetWeaponTypes}}
      <div class="flex2">
         <label for="targetWeaponType">{{localize 'FADE.dialog.masteryTargetType'}}</label>
         <select name="targetWeaponType" class="form-control" style="width:100%">
            {{selectOptions targetWeaponTypes selected=selectedWeaponType}}
         </select>
      </div>
      {{/if}}
   </div>
   <!-- Modifier Input Field -->
   <div class="flexrow top-label" style="margin:5px 0;">
      <div class="flex1">
         <label>{{localize "FADE.attackRoll"}}</label>
         <input name="attackRoll" placeholder='1d20' type="text" value="1d20" />
      </div>
      <div class="flex1">
         <label>{{localize "FADE.modifier"}}</label>
         <input name="mod" placeholder=0 type="number" />
      </div>
   </div>
   {{#if extraRollOptions}}
   {{!-- Roll with advantage/disadvantage --}}
   <div class="form-group">
      {{radioBoxes "rollFormulaType" rollChoices checked=rollChosen localize=true}}
   </div>
   {{/if}}
</div>