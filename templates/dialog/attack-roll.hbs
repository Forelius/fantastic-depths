<div class="fade-dialog">
   <div class="flexrow top-label">
      <div class="flex2">
         <!-- Dropdown for selecting 'melee' or 'missile' -->
         <label for="attackType">{{localize 'FADE.AttackTypes.name'}}</label>
         <select name="attackType" class="form-control" style="width:100%">
            {{selectOptions attackTypes selected=attackType}}
         </select>
      </div>
      {{#if targetWeaponTypes}}
      <div class="flex2">
         <label for="targetWeaponType">{{localize 'FADE.dialog.masteryTargetType'}}</label>
         <select name="targetWeaponType" class="form-control" style="width:100%">
            {{selectOptions targetWeaponTypes selected=selectedWeaponType}}
         </select>
      </div>
      {{/if}}
   </div>
   <!-- Range Selector -->
   <div id="rangeSelect" style="margin: 10px 0 6px 0;{{#unless (eq attackType "missile")}}display: none;{{/unless}}">
      <div class="flexrow">
         <label class="flex0" style="margin-left: 8px;">{{localize "FADE.Spell.range"}}:</label> <span style="margin-left:6px;">{{attackDistance}}</span>
      </div>
      <div class="form-group">
         {{radioBoxes "rangeType" rangeChoices checked=rangeSelected localize=true}}
      </div>
   </div>
   <!-- Modifier Input Field -->
   <div class="flexrow top-label" style="margin:5px 0;">
      <div class="flex1">
         <label>{{localize "FADE.attackRoll"}}</label>
         <input name="attackRoll" placeholder='1d20' type="text" value="{{attackRoll}}" />
      </div>
      <div class="flex1">
         <label>{{localize "FADE.modifier"}}</label>
         <input name="mod" placeholder=0 type="number" value="{{modifier}}"/>
      </div>
   </div>
   {{#if extraRollOptions}}
   {{!-- Roll with advantage/disadvantage --}}
   <div class="form-group">
      {{radioBoxes "rollFormulaType" rollSelected checked=rollChosen localize=true}}
   </div>
   {{/if}}
</div>